html
    head 
        title Merb Coder
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        link(rel="stylesheet" href="./style.css")
        script(src="/socket.io/socket.io.js") 
    body
        div(class="row bg-warning p-4")
            |
            div(class="col box")
                h1(class="text-center")= `Bienvenido ${name}` 
                |
            div(class="col box2")
                form(method="get" action="/logout" class="form")
                    input(type="submit" value="Cerrar sesión" class="mt-3 btn btn-outline-danger btnClose")
        h2(class="text-center mt-5") Productos
        |
        |
        div(class="frameTable")
            div(class="frameTable2 p-3")
                table(class="table table-primary table-hover text-center")
                    thead(class="table-info")
                        tr 
                            th Título
                            th Precio 
                            th Imagen
                    tbody
                        each product in products
                            tr 
                                td=product.title
                                td=product.price
                                td
                                    img(src=`${product.urlPicture}` alt="imagen")
        script(src="/mocks.js") 
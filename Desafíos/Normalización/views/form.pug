html
    head 
        title Desafío
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        link(rel="stylesheet" href="./style.css")
        script(src="/socket.io/socket.io.js") 
        script(src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js") 
    body
        h1(class="text-center bg-primary p-4") Normalización
        h2(class="text-center mb-4") Chat
        h3(class="text-center mb-4" id="compression" value="")
        |
        |
        div(class="frameFormChat")
            form(onsubmit="return addText(this)" class="formChat")
                |
                input(class="form-control w-50" type="email" id="email" placeholder="Correo@electronico.com")
                |
                input(class="form-control w-50" type="text" id="name" placeholder="Nombre")
                |
                input(class="form-control w-50" type="text" id="lastName" placeholder="Apellido")
                |
                input(class="form-control w-50" type="number" id="age" placeholder="Edad")
                |
                input(class="form-control w-50" type="text" id="alias" placeholder="Alias")
                |
                input(class="form-control w-50" type="text" id="avatar" placeholder="Avatar")
                |
                div(class="m-5" id="messages")
                |
                input(class="w-50 form-control" type="text" id="text" placeholder="Texto")
                input(class="btn btn-outline-primary m-3" type="submit" value="Enviar mensaje")
        |
        |
        script(type="module" src="/generateUser.js") 
        script(type="module" src="/util.js") 
        script(src="/index.js") 
